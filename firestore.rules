rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Destinations: Public read, admin write
    match /destinations/{destinationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Hotels: Public read, admin write
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Profiles: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admin Roles: Only readable by admins (for now)
    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if false; // Prevent client-side modification of roles
    }

    // Contact Messages: Only writable by anyone, but only readable by admins.
    match /contact_messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
  }
}
