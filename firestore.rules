
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Destinations: Publicly readable, only admins can write.
    match /destinations/{destinationId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Hotels: Publicly readable, only admins can write.
    match /hotels/{hotelId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Profiles: Users can read and write their own profile.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Contact Messages: Only admins can read. Anyone can create.
    match /contact_messages/{messageId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false;
    }

    // Admin Roles: Only readable and writable by other admins.
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
